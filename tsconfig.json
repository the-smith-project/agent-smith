{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["core/**/*.ts", "openclaw-plugin/**/*.ts", "src/**/*.ts", "smith.config.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
